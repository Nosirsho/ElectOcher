@model IEnumerable<ElectrOcher.Models.Talon>

@{
    ViewData["Title"] = "Index";
}
<div class="form-inline">
    <a class="nav-link" href="/Operator" target="_blank">Оператор</a>
    <a class="nav-link" href="/Home" target="_blank">Регистрация</a>
    <a class="nav-link" href="/Tablo" target="_blank">Информационное табло</a>
</div>
<h1>Список обслуженных клиентов</h1>


<div class="row text-center mb-2 ">
    <form method="post" action="~/Otchet/Index">


        <div class="form-check-inline ml-2">
            <label for="sDate" class="control-label mb-2 mr-2">C  </label>
            <input id="datetime" type="datetime-local" name="sDate">
        </div>

        <div class="form-check-inline">
            <label for="eDate" class="control-label mb-2 mr-2">По </label>
            <input id="datetime" type="datetime-local" name="eDate">
        </div>


        <div class="form-check-inline">
            <input type="submit" value="Отчет" class="btn btn-primary" />
        </div>

    </form>

</div>



<table class="table text-center">
    <thead>
        <tr>
            <th>
                Номер талона
            </th>
            <th>
                Время регистрации
            </th>
            <th>
                Время завершение обслуживания
            </th>
            <th>
                Обслужено за:<br> (hh:mm:ss)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomerPP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TalonTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcceptTime)
                </td>
                <td>
                    @{
                        string raznica = item.getServiceTime().Hours + ":" + item.getServiceTime().Minutes + ":" + item.getServiceTime().Seconds;
                    }
                    @Html.DisplayFor(modelItem => raznica)
                </td>
            </tr>
        }
    </tbody>
</table>